<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/dark_grey"
        android:fontFamily="@font/googlesans_regular"
        android:gravity="center"
        android:padding="14dp"
        android:text="1"
        android:textColor="@color/light_bright_grey"
        android:textSize="26sp"
        app:neumorph_shadowColorDark="@color/darkest_grey"
        app:neumorph_shadowColorLight="@color/medium_grey"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/NeumorphicButtonShapeAppearance"
        app:neumorph_shapeType="flat" />
</LinearLayout>